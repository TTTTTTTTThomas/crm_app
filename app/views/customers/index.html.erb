<section class="section">
  <div class="container">
    <h1 class="title">All Customers</h1>
    
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle">Total customers: <%= @customers.count %></p>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <div class="buttons">
            <%= link_to "Alphabetized View", customers_alphabetized_path, class: "button is-info" %>
            <%= link_to "Missing Email", customers_missing_email_path, class: "button is-warning" %>
            <%= link_to "Admin Panel", admin_root_path, class: "button is-primary" %>
          </div>
        </div>
      </div>
    </div>

    <div class="columns is-multiline">
      <% @customers.each do |customer| %>
        <div class="column is-half">
          <%= render 'customer', customer: customer %>
        </div>
      <% end %>
    </div>
  </div>
</section>
