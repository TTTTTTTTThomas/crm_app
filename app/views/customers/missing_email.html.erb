<section class="section">
  <div class="container">
    <h1 class="title">Customers Missing Email Addresses</h1>
    
    <div class="level">
      <div class="level-left">
        <div class="level-item">
          <p class="subtitle has-text-warning">
            <span class="icon">
              <i class="fas fa-exclamation-triangle"></i>
            </span>
            Customers without email: <%= @customers.count %>
          </p>
        </div>
      </div>
      <div class="level-right">
        <div class="level-item">
          <div class="buttons">
            <%= link_to "All Customers", root_path, class: "button is-info" %>
            <%= link_to "Alphabetized View", customers_alphabetized_path, class: "button is-info" %>
            <%= link_to "Admin Panel", admin_root_path, class: "button is-primary" %>
          </div>
        </div>
      </div>
    </div>

    <% if @customers.any? %>
      <div class="columns is-multiline">
        <% @customers.each do |customer| %>
          <div class="column is-half">
            <%= render 'customer', customer: customer %>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="notification is-success">
        <p class="has-text-centered">
          <span class="icon is-large">
            <i class="fas fa-check-circle fa-2x"></i>
          </span>
        </p>
        <p class="has-text-centered is-size-5">
          Great! All customers have email addresses.
        </p>
      </div>
    <% end %>
  </div>
</section>
